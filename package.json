{
  "name": "lumox",
  "version": "0.1.0",
  "description": "Local-first encrypted chat storage engine",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "example": "tsx examples/node-example.ts",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run test && pnpm run build"
  },
  "keywords": [
    "encryption",
    "storage",
    "chat",
    "local-first",
    "sqlite",
    "wasm"
  ],
  "author": {
    "name": "Kumar Anirudha",
    "email": "build@anirudha.dev",
    "url": "https://anirudha.dev"
  },
  "license": "MIT",
  "dependencies": {
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.19",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "absurd-sql": "0.0.54"
  },
  "peerDependenciesMeta": {
    "absurd-sql": {
      "optional": true
    }
  }
}
